#!/usr/bin/env bash
# Installs and configures nginx web server to serve Holberton School

# Install nginx
apt-get update
apt-get install -y nginx

# Stop all nginx processes
pkill -9 nginx 2>/dev/null
sleep 1

# Create the HTML content in the DEFAULT nginx location
mkdir -p /usr/share/nginx/html
echo "Holberton School" > /usr/share/nginx/html/index.html

# Also create in /var/www/html for good measure
mkdir -p /var/www/html
echo "Holberton School" > /var/www/html/index.html

# Fix nginx configuration to use correct root
cat > /etc/nginx/sites-available/default << 'NGINXCONF'
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    
    # Try both common locations
    root /usr/share/nginx/html;
    
    index index.html index.htm;
    server_name _;
    
    location / {
        try_files \$uri \$uri/ =404;
    }
}
NGINXCONF

# Test configuration
nginx -t

# Start nginx
nginx

# Wait and test
sleep 3
echo "Testing HTTP response:"
curl -s -I http://localhost/ | head -1

echo -e "\nTesting content:"
curl -s http://localhost/

# Additional verification
echo -e "\nFile being served from:"
grep "root" /etc/nginx/sites-available/default
